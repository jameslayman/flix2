<% if object.errors.any? %>
  <section id="errors">
    <header>
      <h2>
        Oops! This movie could not be saved.
      </h2>
      <h3>
        Please correct the following entry errors:
        <%= pluralize(object.errors.count, "Error") %>
      </h3>
    </header>
    <ul>
      <% object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </section>
<% end%>
