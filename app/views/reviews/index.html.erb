<header id="content-header">
  <h1>Reviews for <%= link_to(@movies.title, @movies) %></h1>
</header>

<ul>
  <% @reviews.each do |review| %>
    <li>
      <p>
        <%= pluralize(review.stars, 'star') %> by <%= review.name %>:
      </p>
      <p>
        <%= review.comment %>
      </p>
    </li>

    <%= time_ago_in_words(review.created_at) %> ago
  <% end %>
</ul>

<%= link_to "+ Write Review", new_movie_review_path,
       class: 'button ok review' %>
